{
  "Version": "2012-10-17",
  "Statement": [
    {
      "Effect": "Allow",
      "Action": [
        "iot:Connect",
        "iot:Publish",
        "iot:Subscribe",
        "iot:Receive"
      ],
      "Resource": [
        "arn:aws:iot:${AWS_REGION}:${AWS_ACCOUNT_ID}:client/${THING_NAME}",
        "arn:aws:iot:${AWS_REGION}:${AWS_ACCOUNT_ID}:topic/*",
        "arn:aws:iot:${AWS_REGION}:${AWS_ACCOUNT_ID}:topicfilter/*"
      ]
    }
  ]
}
